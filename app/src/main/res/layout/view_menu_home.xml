<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <View
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:background="@drawable/shape_bg_transparent" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/triangle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_menu_triangle"
            android:paddingLeft="15dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_menu_bg"
            android:orientation="vertical">
            <TextView
                android:id="@+id/share_tv"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="分享"
                android:gravity="center_vertical"
                android:layout_gravity="left|top"
                android:drawableLeft="@mipmap/menu_share"
                android:drawablePadding="15dp"
                android:paddingLeft="15dp"
                android:textSize="15sp"/>
            <TextView
                android:id="@+id/user_tv"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="个人资料"
                android:gravity="center_vertical"
                android:layout_gravity="left|top"
                android:drawableLeft="@mipmap/menu_user_info"
                android:drawablePadding="15dp"
                android:paddingLeft="15dp"
                android:textSize="15sp"/>
            <TextView
                android:id="@+id/scan_tv"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="扫一扫"
                android:gravity="center_vertical"
                android:layout_gravity="left|top"
                android:drawableLeft="@mipmap/menu_scan"
                android:drawablePadding="15dp"
                android:paddingLeft="15dp"
                android:textSize="15sp"/>
            <TextView
                android:id="@+id/safe_tv"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="账号安全"
                android:gravity="center_vertical"
                android:layout_gravity="left|top"
                android:drawableLeft="@mipmap/menu_account_safe"
                android:drawablePadding="15dp"
                android:paddingLeft="15dp"
                android:textSize="15sp"/>
            <TextView
                android:id="@+id/setup_tv"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="设置"
                android:gravity="center_vertical"
                android:layout_gravity="left|top"
                android:drawableLeft="@mipmap/menu_setup"
                android:drawablePadding="15dp"
                android:paddingLeft="15dp"
                android:textSize="15sp"/>

        </LinearLayout>




    </LinearLayout>



</RelativeLayout>
